<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing page</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="landingpage">
        <div class="userform">
            <form method="get" action="/form">
                <button type="submit">Add users</button>
            </form>
        </div>
        <div class="userbody">
            <% data.forEach( user=> {%>
                <div class="usercard<%= user.isPromoted %>">
                    <div>
                        <%= user.name %>
                    </div>
                    <div>
                        <%= user.email %>
                    </div>
                    <div>
                        <form method="POST" action="/users/<%= user._id %>?_method=PUT">
                            <button id="edit-<%= user.name %>" type="submit">
                              <% if(user.isPromoted){%> <%= 'Demote' %> <%} else{%> <%=
                              'promote'%> <% }%>
                            </button>
                          </form>
                        </div>
                        <div>
                          <form method="POST" action="/users/<%= user._id %>?_method=DELETE">
                            <button id="delete-<%= user.name %>">Delete</button>
                          </form>
                        </div>
                </div>
                <%})%>
        </div>
    </div>
</body>

</html>